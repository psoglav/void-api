// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id      String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  text    String
  status  String
  list_id String?
}

model List {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String
}
